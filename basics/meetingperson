import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int a= scan.nextInt();
        Float b = scan.nextFloat();
        scan.nextLine();
        String c =scan.nextLine();
        System.out.printf("%s is %d years old and %.2f meters tall.",c,a,b);
    }
}
