import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner scan=new Scanner(System.in);
        int n=scan.nextInt();
        int arr[]=new int[n];
        int sumeven=0;
        int sumodd=0;
        int evenindex=0;
        int oddindex=0;
        for(int i=0;i<n;i++){
            arr[i]=scan.nextInt();
            if(arr[i]%2==0){
                sumeven=sumeven+arr[i];
            }
            else {
                sumodd=sumodd+arr[i];
            }
            if(i%2==0){
                evenindex=evenindex+arr[i];
            }
            else
                oddindex=oddindex+arr[i];
        }
        System.out.print(sumeven +" "+ sumodd +" " + evenindex + " "+ oddindex+" ");
    }
}
