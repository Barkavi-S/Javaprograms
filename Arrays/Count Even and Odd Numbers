import java.util.Scanner;

public class Solution {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt(); 
        int[] arr = new int[n];
        int countEven = 0;
        int countOdd = 0;

        for (int i = 0; i < n; i++) {
            arr[i] = scan.nextInt(); 
            if (arr[i] % 2 == 0) {
                countEven++; 
            } else {
                countOdd++; 
            }
        }

        System.out.println(countEven);
        System.out.println(countOdd);
    }
}
